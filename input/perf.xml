<?xml version="1.0" encoding="UTF-8"?>
<Simulation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="../input/XMLFormat.xsd">
    <EndTime>5.0</EndTime>
    <TimeStepSize>0.0005</TimeStepSize>
    <ForceCalculation>
        <LennardJonesCell Epsilon="1.0" Sigma="1.0"/>
    </ForceCalculation>
    <AverageBrownianMotion>0.01</AverageBrownianMotion>
    <SimulationStrategy>
        <LinkedCell>
            <BoundaryBox>
                <BoxSize X="12.0" Y="12.0" Z="102.0"/>
                <Front>Periodic</Front>
                <Rear>Periodic</Rear>
                <Left>Periodic</Left>
                <Right>Periodic</Right>
                <Top>Reflecting</Top>
                <Bottom>Reflecting</Bottom>
            </BoundaryBox>
            <CutoffRadius>2.5</CutoffRadius>
        </LinkedCell>
    </SimulationStrategy>
    <Dimensions>3</Dimensions>
    <Thermostat>
        <T_Init>40</T_Init>
        <N_Term>1000</N_Term>
    </Thermostat>
    <FileType>
        <Input>
            <ShapeList>
                <Shape>
                    <Cuboid Spacing="1.0" Mass="1.0">
                        <Position X="1.0" Y="1.0" Z="1.0"/>
                        <Velocity X="0.0" Y="0.0" Z="0.0"/>
                        <Dimensions X="10" Y="10" Z="100"/>
                    </Cuboid>
                </Shape>
            </ShapeList>
        </Input>
    </FileType>
</Simulation>